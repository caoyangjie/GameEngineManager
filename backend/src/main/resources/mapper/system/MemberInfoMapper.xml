<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gameengine.system.mapper.MemberInfoMapper">
    
    <resultMap type="com.gameengine.system.domain.MemberInfo" id="MemberInfoResult">
        <id     property="memberId"          column="member_id"         />
        <result property="userId"            column="user_id"          />
        <result property="currentLevelId"    column="current_level_id" />
        <result property="totalDeposit"      column="total_deposit"   />
        <result property="totalInvestment"   column="total_investment" />
        <result property="totalWithdrawal"   column="total_withdrawal" />
        <result property="totalEarnings"     column="total_earnings"   />
        <result property="levelUpTime"       column="level_up_time"   />
        <result property="createTime"        column="create_time"      />
        <result property="updateTime"        column="update_time"      />
    </resultMap>
    
    <sql id="selectMemberInfoVo">
        select member_id, user_id, current_level_id, total_deposit, total_investment, 
               total_withdrawal, total_earnings, level_up_time, create_time, update_time
        from member_info
    </sql>
    
    <select id="selectByUserId" parameterType="Long" resultMap="MemberInfoResult">
        <include refid="selectMemberInfoVo"/>
        where user_id = #{userId}
    </select>
</mapper>
